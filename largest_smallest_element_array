#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "How many elements you want to insert in an array: ";
    cin >> n;
    int a[n];
    cout << "Enter numbers for the array: ";
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    int l=a[0];
    int s=a[0];

    for (int i = 0; i < n; i++) {
        if (a[i]>l) {
            l=a[i];
        }
        if (a[i]<s) {
            s=a[i];
        }
    }

    cout << "largest element is : " <<l<<endl;
    cout << "smallest element is : " << s<<endl;

    return 0;
}