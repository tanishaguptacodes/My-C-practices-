#include <iostream>
using namespace std;
class parent {
    public:
    void transport (){
        cout<<"There are 4 types of transport system "<<endl;
    }
};
class child:public parent{
    public:
    void types(){
        cout<<"1.Railways"<<endl<<"2.Roadways"<<endl<<"3.Airways"<<endl<<"4.Waterways";
    }
};
int main() {
    child obj;
    obj.transport();
    obj.types();
    return 0;
}